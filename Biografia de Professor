    <div class="menu-card">
      <p>Bem-vindo! Escolha uma opção para começar:</p>
      <div class="menu-btns">
        <button class="menu-btn" id="btnEntrar">Entrar</button>
        <button class="menu-btn" id="btnConfig">Configurações</button>
      </div>
    </div>
  </div>

  <!-- Botão Voltar -->
  <div class="voltar-bar" id="voltarBar" style="display:none;">
    <button class="voltar-btn" id="btnVoltar" aria-label="Voltar ao menu inicial">
      <svg viewBox="0 0 24 24"><path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/></svg>
      Voltar
    </button>
  </div>

  <!-- Modal Configurações -->
  <div class="settings-modal-bg" id="configModalBg" aria-modal="true" aria-labelledby="settingsTitle" tabindex="-1">
    <div class="settings-modal" id="settingsModal">
